{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "lib": [
      "es6",
      "es2015",
      "es2017",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*"
    ]
}
